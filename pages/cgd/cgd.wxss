/* pages/cgd/cgd.wxss */

.container {
  padding-bottom: 180rpx;
}

.top {
  padding: 25rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.top .scan {
  display: flex;
  align-items: center;
  color: #fff;
  font-size: 30rpx;
}

.top .scan image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 24rpx;
}

.top picker {
  position: relative;
}

.top picker .picker {
  color: rgba(7, 173, 236, 1);
  font-size: 28rpx;
  padding-right: 40rpx;
}

.top picker .icon {
  width: 16rpx;
  height: 10rpx;
  position: absolute;
  right: 0;
  top: 50%;
  margin-top: -2rpx;
}

.section {
  background: rgba(59, 59, 59, 1);
  padding: 40rpx 16rpx;
}

.section_row1 {
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #fff;
  font-size: 30rpx;
  margin-bottom: 28rpx;
}

.section_row1 .tab {
  display: flex;
}

.section_row1 .tab_li {
  padding: 6rpx 20rpx;
  margin: 0 10rpx;
}

.section_row1 .active {
  background: #07adec;
  border-radius: 10rpx;
}

.section .calendar {
  display: flex;
}

.section .calendar_li {
  flex: 1;
  text-align: center;
  color: rgba(255, 255, 255, 0.5);
  font-size: 24rpx;
}

.section .calendar_li .week {
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  background: rgba(132, 173, 208, 0.5);
  border: 2rpx solid rgba(112, 112, 112, 1);
  border-radius: 50%;
  text-align: center;
  margin: 16rpx auto 0;
  color: rgba(255, 255, 255, 1);
  font-size: 28rpx;
}

.section .calendar_active .week {
  background: #9d9d9d;
  border: 2rpx solid rgba(112, 112, 112, 1);
}

.section .calendar_active .date {
  color: #fff;
}

.gym_head {
  padding: 58rpx 24px 8rpx 16rpx;
  display: flex;
  justify-content: space-between;
}

.gym_head .shop {
  font-size: 30rpx;
  color: #efcc59;
}

.li, .li3 {
  background: rgba(59, 59, 59, 1);
  border: 2rpx solid rgba(112, 112, 112, 0.5);
  padding: 16rpx 40rpx 24rpx 16rpx;
  margin-bottom: 10rpx;
}

.li {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.li_center {
  font-size: 30rpx;
  color: #efcc59;
}

.li_left .name, .li_head .name {
  font-size: 30rpx;
  color: #fff;
}

.li_head {
  display: flex;
  align-items: center;
}

.li_left .t2 {
  font-size: 24rpx;
  color: rgba(239, 204, 89, 1);
  margin: 6rpx 0;
}

.li_left .t2 .num {
  color: rgba(220, 50, 74, 1);
}

.li_left .t2 .time {
  margin-left: 20rpx;
}

.li_left .t3 {
  font-size: 28rpx;
  color: #fff;
}

.li_left .t3 .jiaolian {
  margin-right: 6rpx;
}

.li_left .t3 .seeSeat {
  color: rgba(220, 50, 74, 1);
  margin-left: 10rpx;
  text-decoration: underline;
}

.li_right .btn {
  text-align: center;
  width: 158rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 18rpx;
  font-size: 30rpx;
  color: #fff;
  margin: 6rpx 0;
}

.li_right .btn1 {
  background: #07adec;
}

.li_right .btn2 {
  background: #dc324a;
}

.li_right .unconfirmed {
  background: rgba(239, 204, 89, 1);
}

.li_left image, .li_head .headimg {
  display: block;
  width: 96rpx;
  height: 96rpx;
  background: rgba(0, 0, 0, 0);
  border: 2rpx solid rgba(112, 112, 112, 1);
  border-radius: 50%;
  margin-right: 30rpx;
}

.li_left .time {
  font-size: 24rpx;
  color: rgba(239, 204, 89, 1);
  margin: 14rpx 0 0;
}

.li2 .li_left {
  display: flex;
  align-items: center;
}

.li3 .li_item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: #fff;
  font-size: 30rpx;
  margin: 30rpx 0;
}

.li4 .li_item {
  align-items: flex-start;
}

.li4 .li_item .type {
  margin-top: -30rpx;
}

.li4 .li_item .type_li {
  display: flex;
  align-items: center;
  margin: 30rpx 0;
}

.li3 .li_item .courseName {
  width: 180rpx;
  font-size: 28rpx;
}

.li3 .li_item .price {
  text-align: right;
  color: rgba(239, 204, 89, 1);
  font-size: 24rpx;
  width: 200rpx;
  margin-right: 30rpx;
}

.li3 .li_item .right {
  display: flex;
}

.li3 .li_item .right .btn {
  padding: 0 18rpx;
  height: 60rpx;
  line-height: 60rpx;
  background: rgba(112, 112, 112, 1);
  border-radius: 18rpx;
}

.li3 .li_item .right .btn1 {
  background: rgba(80, 182, 116, 1);
  margin-right: 18rpx;
}

.nav {
  width: 100%;
  display: flex;
  padding: 30rpx 0;
  background: rgba(59, 59, 59, 1);
  box-shadow: 0px -6rpx 12rpx rgba(0, 0, 0, 0.5);
  position: fixed;
  bottom: 0;
  box-sizing: border-box;
}

.nav_tab {
  flex: 1;
  box-sizing: border-box;
  text-align: center;
  color: #fff;
  font-size: 32rpx;
  height: 46rpx;
  line-height: 46rpx;
}

.nav_tab:nth-child(2), .nav_tab:nth-child(4) {
  border-left: 2rpx solid rgba(112, 112, 112, 1);
  border-right: 2rpx solid rgba(112, 112, 112, 1);
}

.nav .active {
  color: rgba(239, 204, 89, 1);
}

.store,.choose {
  padding: 30rpx;
  display: flex;
}
.choose{
  justify-content: space-between;
  background:rgba(59,59,59,1);
}
.store picker,.choose picker {
  position: relative;
  color:#fff;
  font-size: 30rpx;
}

.store picker .picker {
  color: rgba(239, 204, 89, 1);
  font-size: 30rpx;
  padding-right: 40rpx;
}
.choose picker .picker{
    padding-right: 40rpx;
}

.store picker .icon,.choose picker .icon {
  width: 16rpx;
  height: 10rpx;
  position: absolute;
  right: 0;
  top: 50%;
  margin-top: -2rpx;
}
.seat_tips {
  text-align: center;
  padding: 20rpx 0;
  color: rgba(239, 204, 89, 1);
  font-size: 30rpx;
  margin-top: 30rpx;
}

.seat_ct {
  padding-bottom: 48rpx;
  border-top: 2rpx solid rgba(112, 112, 112, 1);
  border-bottom: 2rpx solid rgba(112, 112, 112, 1);
  background: rgba(59, 59, 59, 1);
}

.seat_ct .head {
  margin: 0 auto 50rpx;
  width: 381rpx;
  text-align: center;
  position: relative;
  border-width: 50rpx 50rpx 0;
  border-style: solid;
  border-color: #fff transparent;
}

.seat_ct .head_inner {
  text-align: center;
  width: 381rpx;
  height: 50rpx;
  line-height: 50rpx;
  position: absolute;
  left: 0;
  top: -50rpx;
  color: rgba(220, 50, 74, 1);
  font-size: 30rpx;
}

.seat_ct .options {
  display: flex;
  flex-wrap: wrap;
  padding-left: 10rpx;
}

.seat_ct .options_li {
  width: 80rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  border: 2rpx solid rgba(112, 112, 112, 1);
  border-radius: 16rpx;
  margin: 0 20rpx 14rpx;
  box-sizing: border-box;
  color: #fff;
  font-size: 30rpx;
}

/* .seat_ct .state1 {
  background: rgba(220, 50, 74, 1);
  border: none !important;
} */

.seat_ct .state2 {
  background: rgba(80, 182, 116, 1);
  border: none !important;
}

.row {
  margin-top: 40rpx;
}

.row_li {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 50rpx;
  background: rgba(255, 255, 255, 0.5);
  color: #333;
  font-size: 30rpx;
  margin-top: 18rpx;
}

.row_li .more {
  width: 16rpx;
  height: 26rpx;
}

.beforeCommit{
  width: 608rpx;
 height: 100rpx;
 line-height: 100rpx;
 background: rgba(239, 204, 89, 0.5);
 box-shadow: 0px -4rpx 8rpx rgba(0, 0, 0, 0.16);
 opacity: 1;
 border-radius: 20rpx;
 margin: 88rpx auto 0;
 text-align: center;
 color: #fff;
 font-size: 32rpx;
}