/* pages/coach_ranking/coach_ranking.wxss */
.header {
  position: relative;
}

.header_bj {
  width: 750rpx;
  height: 500rpx;
}

.header_ct {
  width: 100%;
  position: absolute;
}

.header_ct .nav {
  width: 100%;
  position: relative;
  z-index: 999;
  height: 44px;
  text-align: center;
}

.header_ct .title {
  height: 44px;
  line-height: 44px;
  font-size: 30rpx;
  color: #fff;
}

.header_ct .return {
  width: 18rpx;
  height: 30rpx;
  position: absolute;
  left: 30rpx;
  top: 50%;
  margin-top: -14rpx;
}

.header_ct .headline {
  display: block;
  width: 232rpx;
  height: 60rpx;
  margin: 18rpx auto;
}

.header_ct .team {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #fff;
}

.header_ct .team .label {
  margin-right: 30rpx;
  font-size: 28rpx;
  color: #efcc59;
}

.content {
  position: absolute;
  width: 95%;
  left: 2.5%;
  box-sizing: border-box;
  background: rgba(59, 59, 59, 1);
  box-shadow: 0px 6rpx 12rpx rgba(0, 0, 0, 0.45);
  border-radius: 20rpx;
}
.content .type{
  display: flex;
  justify-content: center;
  padding: 32rpx 0;
}
.content .type_li{
width:136rpx;
text-align: center;
height:56rpx;
line-height: 56rpx;
border:2rpx solid rgba(123,123,123,1);
border-radius:12rpx;
margin: 0 44rpx;
color:rgba(123,123,123,1);
font-size: 30rpx;
}
.content .type_active{
border:2rpx solid #07ADEC;
color:#07ADEC;
}
.content .area{
  display: flex;
  justify-content: space-between;
  padding: 12rpx 16rpx;
  border-bottom:2rpx solid rgba(112,112,112,1);
  color:#fff;
  font-size: 20rpx;
}
.content .area picker{
  position: relative;
    padding-right: 10rpx;
}
.content .area picker .picker{
  width: 150rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.content .area .area_p .picker{
  width: 200rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
} 
.content .area .more{
  position: absolute;
  top:50%;
  margin-top: -6rpx;
 width: 20rpx;
 height: 12rpx;
 right: 0;
}
.list{
  padding-top: 40rpx;
}
.list_li{
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 50rpx 0 24rpx;
  margin-bottom: 30rpx;
}
.list_li .left{
  display: flex;
  align-items: center;
  color:#fff;
  font-size: 20rpx;
}
.list_li .left .rank{
  position: relative;
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
}
.list_li .left .rank image{
    width: 60rpx;
  height: 60rpx;
}
.list_li .left .rank .txt{
    width: 60rpx;
    text-align: center;
  height: 60rpx;
  line-height: 60rpx;
  position: absolute;
  top: 0;
  left: 0;
  font-size: 28rpx;
}
.list_li .left .level{
  width:56rpx;
height:24rpx;
line-height: 1;
text-align: center;
background:rgba(239,204,89,1);
border-radius:10rpx;
margin-right: 4rpx;
}
.list_li .left .gender{
  width:16rpx;
height:16rpx;
margin-left: 8rpx;
}
.list_li .score{
 font-size: 28rpx;
 color:#DC324A;
}
