/* pages/my_jiaolian/my_jiaolian.wxss */
.header {
  width: 712rpx;
  background: rgba(59, 59, 59, 1);
  border-radius: 20rpx;
  margin: 0 auto;
  box-sizing: border-box;
  padding: 14rpx 24rpx 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.header_info {
  display: flex;
  align-items: center;
}

.header_info .headimg {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 30rpx;
}

.header_info .name {
  font-size: 32rpx;
  color: rgba(239, 204, 89, 1);
  margin-bottom: 10rpx;
}

.header_info .grade{
  font-size: 24rpx;
  color:#fff;
  }

  .header .msg{
    display: flex;
    align-items: center;
    color:#fff;
    font-size: 28rpx;
    margin-top: 20rpx;
  }

  .header .msg image{
    width: 25rpx;
    height: 25rpx;
    margin-left: 10rpx;
  }