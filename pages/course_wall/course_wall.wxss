/* pages/course_wall/course_wall.wxss */
.container{
  padding-bottom: 150rpx;
}
.carousel swiper {
  width: 100%;
  /* padding: 0 30rpx 6rpx; */
  box-sizing: border-box;
  position: relative;
}

.carousel swiper .slide-image {
  width: 100%;
  height: 100%;
  display: block;
}

.wx-swiper-dots {
  position: absolute;
  top: 90%;
}
.head{
  display: flex;
  align-items: center;
  padding: 26rpx 0 20rpx 26rpx;
}
.head_title {
  color: #efcc59;
  font-size: 40rpx;
  margin-right: 44rpx;
}
.head_subTitle{
  width:146rpx;
  text-align: center;
height:60rx;
line-height: 60rpx;
border:2rpx solid rgba(255,255,255,1);
border-radius:30rpx;
font-size: 24rpx;
color:#fff;
}
.section{
  padding: 30rpx 20rpx 20rpx;
  background:rgba(59,59,59,1);
border-top:2rpx solid rgba(112,112,112,0.5);
border-bottom:2rpx solid rgba(112,112,112,0.5);
margin-bottom: 32rpx;
}
.section_li .title{
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color:#fff;
  margin:5rpx 0;
  margin-bottom: 30rpx;
}

.section_li .title image{
  width: 40rpx;
  height: 40rpx;
  margin-right: 8rpx;
}
.section_li .intr image{
  width: 14rpx;
  height: 14rpx;
  margin-left: 10rpx;
}
.section_li .ct{
  color:rgba(255,255,255,0.5);
  font-size: 24rpx;
  padding: 0 10rpx;
}
.section_li .more{
width: 24rpx;
height: 14rpx;
display: block;
margin: 26rpx auto 0;
}
.section_li .fold{
transform: rotate(180deg)
}
.ellipsis-2 {
    display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis;
    word-wrap: break-word;
    word-break: break-all;
    white-space: normal !important;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.section_li .score{
  display: flex;
}
.section_li .score_li{
  margin: 0 20rpx 20rpx;
 padding: 0 30rpx;
height:44rpx;
line-height: 44rpx;
border:2rpx solid rgba(239,204,89,1);
border-radius:100rpx;
color:rgba(255,255,255,0.5);
font-size: 24rpx;
}
.section_head{
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 30rpx 20rpx 0;
}
.section_head .left{
    display: flex;
  align-items: center;
}
.section_head .left .headimg{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 8rpx;
}
.section_head .left .name{
   font-size: 30rpx;
   color:rgba(239, 204, 89, 1);
}
.section_head .kcb{
  width:158rpx;
  text-align: center;
  color:#fff;
  font-size: 30rpx;
height:60rpx;
line-height: 60rpx;
background:rgba(7,173,236,1);
border-radius:18rpx;
}
.yuyueBtn{
  position: fixed;
  bottom: 0;
  width: 100%;
  text-align: center;
  font-size: 32rpx;
  color:rgba(220, 50, 74, 1);
  padding: 28rpx 0;
    background:rgba(59, 59, 59, 1);
}