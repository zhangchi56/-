/* pages/order_yuyue/order_yuyue.wxss */
.container{
  padding-bottom: 120rpx;
}
.list_head{
  padding: 25rpx 0 25rpx 60rpx;
  border-top:2rpx solid rgba(112,112,112,1);
  background: rgba(59, 59, 59, 1);
}
.list_head .name{
  font-size:44rpx;
color:rgba(239,204,89,1);
margin-bottom: 14rpx;
}
.list_head .address{
  font-size:24rpx;
color:rgba(7,173,236,1);
}
.list_li{
  display: flex;
  align-items: center;
  justify-content: space-between;
   padding: 25rpx 30rpx 25rpx;
   color:#fff;
   font-size: 28rpx;
   border-top:2rpx solid rgba(112,112,112,1);
  background: rgba(59, 59, 59, 1);
}
.list_li:nth-child(6){
   border-bottom:2rpx solid rgba(112,112,112,1);
   margin-bottom: 48rpx;
}
.list_li .left{
  display: flex;
  align-items: center;
}
.list_li .left image{
  width: 14rpx;
  height: 14rpx;
  margin-right: 10rpx;
}
.list_li .left .price{
 font-size: 32rpx;
 color:rgba(220, 50, 74, 1);
}
.list_li .noCoupon{
  color:rgba(255,255,255,0.5);
}
.commit{
  width:608rpx;
height:100rpx;
line-height: 100rpx;
background:rgba(239,204,89,1);
box-shadow:0px -4rpx 8rpx rgba(0,0,0,0.16);
opacity:1;
border-radius:20rpx;
margin:88rpx auto 0;
text-align: center;
color:#fff;
font-size: 32rpx;
}
.commit .price2{
  color:rgba(220, 50, 74, 1);
}
.list_li picker{
position: relative;
}
.list_li picker .picker{
  width:160rpx;
height:44rpx;
line-height: 44rpx;
border:2rpx solid rgba(239,204,89,1);
border-radius:100rpx;
text-align: center;
padding-right: 15rpx;
box-sizing: border-box;
}
.list_li .left picker .icon{
  width: 16rpx;
  height: 10rpx;
  position: absolute;
  right: 16rpx;
  top:50%;
  margin-top: -2rpx;
}
.list_li .left .line{
  background:rgba(112, 112, 112, 1);
  margin:0 10rpx;
  width: 14rpx;
  height: 2rpx;
}
.list_li .xz{
  width: 40rpx;
  height: 40rpx;
  padding-right: 30rpx;
}