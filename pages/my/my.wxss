/* pages/my/my.wxss */
.container{
  padding-bottom: 100rpx;
}
.header {
  width: 712rpx;
  background: rgba(59, 59, 59, 1);
  border-radius: 20rpx;
  margin: 0 auto;
  box-sizing: border-box;
  padding: 14rpx 24rpx 20rpx;
}

.header_info {
  display: flex;
  align-items: flex-end;
  position: relative;
}

.header_info .headimg {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 30rpx;
}

.header_info .name {
  font-size: 32rpx;
  color: rgba(239, 204, 89, 1);
  margin-bottom: 10rpx;
}

.header_info .btn {
  display: flex;
  align-items: center;
  text-align: center;
  font-size: 24rpx;
}

.header_info .btn1 {
  width: 118rpx;
  height: 50rpx;
  line-height: 50rpx;
  border: 2rpx solid rgba(112, 112, 112, 1);
  background: linear-gradient(180deg, rgba(255, 255, 255, 0.5) 0%, rgba(128, 128, 128, 0.5) 100%);
  border-radius: 20rpx;
  margin-right: 30rpx;
  color: #fff;
}

.header_info .btn2 {
  width: 118rpx;
  height: 50rpx;
  line-height: 50rpx;
  border: 2rpx solid rgba(112, 112, 112, 1);
  background: linear-gradient(180deg, rgba(241, 212, 186, 1) 0%, rgba(240, 212, 188, 1) 100%);
  border-radius: 20rpx;
  color: #202020;
}

.header_info .ewm {
  position: absolute;
  width: 68rpx;
  height: 68rpx;
  right: 0;
  top: 0;
}

.header_bottom {
  display: flex;
  justify-content: space-between;
  padding: 0 6rpx;
  margin-top: 40rpx;
  text-align: center;
}

.header_bottom .label {
  color: #07adec;
  font-size: 34rpx;
  margin-bottom: 10rpx;
}

.header_bottom .num {
  color: #fff;
  font-size: 34rpx;
}

.swiper-block{
height: 900rpx;
width: 100%;
/* margin: 40rpx 0; */
}
.swiper-item{
display: flex;
flex-direction: column;
justify-content: center;
align-items: flex-start;
overflow:unset;
position: relative;
box-shadow: 0px 0px 30rpx rgba(0, 0,0,.2);
height: 658rpx;
width: 506rpx;
}
.bj{
height: 658rpx;
width: 506rpx;
border-radius: 20rpx;
box-shadow: 0px 0px 30rpx rgba(0, 0,0,.2);
margin: 0rpx 30rpx;
z-index: 1;
opacity: 0.5;
}
.swiper-block .active{
transform: scale(1.188);
transition:all .2s ease-in 0s;
z-index: 20;
opacity: 1;
}
.swiper-item .mask{
  position: absolute;
  top:122rpx;
  left: 30rpx;
  height: 658rpx;
width: 506rpx;
border-radius: 20rpx;
padding: 40rpx;
box-sizing: border-box;
}
.swiper-item .mask .title{
text-align: center;
font-size:32rpx;
color:rgba(215,150,99,1);
text-shadow:4rpx 4rpx 12rpx rgba(0,0,0,0.16);
}
.swiper-item .mask .hy{
  display: block;
  width: 256rpx;
  height: 256rpx;
  margin: 0 auto;
}
.swiper-item .mask .score{
  width:286rpx;
height:62rpx;
line-height: 62rpx;
margin: 0 auto;
background:linear-gradient(86deg,rgba(226,169,129,1) 0%,rgba(207,137,77,1) 100%);
opacity:1;
border-radius:38rpx;
text-align: center;
font-size: 24rpx;
color:#fff;
}
.swiper-item .mask .tips{
  margin-top: 50rpx;
  font-size:32rpx;
color:rgba(215,150,99,1);
text-shadow:4rpx 4rpx 12rpx rgba(0,0,0,0.16);
margin-bottom: 20rpx;
}
.swiper-item .mask .rights{
  display: flex;
  justify-content: space-between;
  text-align: center;
  font-size: 22rpx;
  color:#8A5642;
}
.swiper-item .mask .rights_li image{
  width: 58rpx;
  height: 58rpx;
  margin: 0 auto 10rpx;
}
/* .wx-swiper-dots{position:relative;left: unset!important;right: 0;} */
.wx-swiper-dots.wx-swiper-dots-horizontal{
margin-bottom: -10rpx;
}
 .list{
  margin-top: 40rpx;
}
.list_li{
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 50rpx;
  background: rgba(255,255,255,0.5);
  color:#333;
  font-size: 30rpx;
  margin-top: 18rpx;
}
.list_li .more{
  width: 16rpx;
  height: 26rpx;
} 

.layer {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.8);
  z-index: 900;
}

.layer_ct {
  width: 100%;
  height: 770rpx;
  box-sizing: border-box;
  position: fixed;
  top:12%;
  left:0;
  z-index: 999;
}
.layer_ct .bak{
  width: 100%;
  height: 770rpx;
}
.layer_ct .title{
  width: 100%;
  position: absolute;
  top:200rpx;
  font-size:56rpx;
font-family:Source Han Sans CN;
font-weight:bold;
color:rgba(139,66,255,1);
text-align: center;
background:linear-gradient(45deg,rgba(122,73,47,1) 0%, rgba(201,125,59,1) 100%);
-webkit-background-clip:text;
-webkit-text-fill-color:transparent;
}
.layer_ct .czBtn{
  width:370rpx;
height:85rpx;
line-height: 85rpx;
background:linear-gradient(90deg,rgba(219,178,146,1) 0%,rgba(248,223,196,1) 100%);
box-shadow:0px 10rpx 30rpx 0px rgba(0, 0, 0, 0.5);
border-radius:43rpx;
font-size:30rpx;
font-family:Source Han Sans CN;
font-weight:500;
color:rgba(120,72,47,1);
text-align: center;
position: absolute;
bottom: 130rpx;
left:50%;
margin-left:-185rpx;
}
.layer_ct .close{
  display: block;
  width: 70rpx;
  height: 112rpx;
  margin:-40rpx auto 0;
}
